    "/list_project_applications": {
      "post": {
        "summary": "List expert applications for a project",
        "operationId": "list_project_applications",
        "description": "List all expert applications for a specific project. Returns applications with their current field values (Status, Expert Type, Expert Level) from GitHub Projects. **Requires authentication** - only the project creator can view applications.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["projectIssueNumber"],
                "properties": {
                  "projectIssueNumber": {
                    "type": "integer",
                    "description": "Project issue number",
                    "example": 13
                  },
                  "state": {
                    "type": "string",
                    "enum": ["open", "closed", "all"],
                    "description": "Filter applications by state",
                    "default": "open",
                    "example": "open"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Applications retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "projectIssueNumber": { "type": "integer" },
                    "count": { "type": "integer" },
                    "applications": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "number": { "type": "integer" },
                          "title": { "type": "string" },
                          "body": { "type": "string" },
                          "state": { "type": "string" },
                          "html_url": { "type": "string" },
                          "created_at": { "type": "string" },
                          "creator": { "type": "string" },
                          "fields": {
                            "type": "object",
                            "properties": {
                              "status": { "type": "string", "nullable": true, "description": "Current status (Pending Review, Under Review, Approved, Rejected, Assigned)" },
                              "expertType": { "type": "string", "nullable": true, "description": "Expert type specialization" },
                              "expertLevel": { "type": "string", "nullable": true, "description": "Expert level (Junior, Mid, Senior, Lead)" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - only project creator can view applications",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/update_application_status": {
      "post": {
        "summary": "Update application status",
        "operationId": "update_application_status",
        "description": "Update the Status field of an expert application in GitHub Projects. All changes are synced to GitHub Projects and visible in the GitHub UI. **Requires authentication** - only the project creator can update applications.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["applicationIssueNumber", "status"],
                "properties": {
                  "applicationIssueNumber": {
                    "type": "integer",
                    "description": "Expert application issue number",
                    "example": 15
                  },
                  "status": {
                    "type": "string",
                    "enum": ["Pending Review", "Under Review", "Approved", "Rejected", "Assigned"],
                    "description": "New status value",
                    "example": "Approved"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status updated successfully and synced to GitHub Projects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "applicationIssueNumber": { "type": "integer" },
                    "status": { "type": "string" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - only project creator can update applications",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/update_application_fields": {
      "post": {
        "summary": "Update application fields (Expert Type, Expert Level)",
        "operationId": "update_application_fields",
        "description": "Update Expert Type and/or Expert Level fields of an expert application in GitHub Projects. All changes are synced to GitHub Projects and visible in the GitHub UI. **Requires authentication** - only the project creator can update applications.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["applicationIssueNumber"],
                "properties": {
                  "applicationIssueNumber": {
                    "type": "integer",
                    "description": "Expert application issue number",
                    "example": 15
                  },
                  "expertType": {
                    "type": "string",
                    "description": "Expert type specialization (e.g., 'Backend Specialist', 'Frontend Specialist', 'Full-Stack Engineer')",
                    "example": "Full-Stack Engineer"
                  },
                  "expertLevel": {
                    "type": "string",
                    "enum": ["Junior", "Mid", "Senior", "Lead"],
                    "description": "Expert level",
                    "example": "Senior"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fields updated successfully and synced to GitHub Projects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "applicationIssueNumber": { "type": "integer" },
                    "updated": { "type": "array", "items": { "type": "string" } },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - only project creator can update applications",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/list_my_applications": {
      "post": {
        "summary": "List my expert applications",
        "operationId": "list_my_applications",
        "description": "List all expert applications created by the authenticated user (expert). Returns applications with project references. **Requires authentication** - OAuth token required.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": ["open", "closed", "all"],
                    "description": "Filter applications by state",
                    "default": "open",
                    "example": "open"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Applications retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "username": { "type": "string", "example": "expert1" },
                    "count": { "type": "integer" },
                    "applications": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "number": { "type": "integer" },
                          "title": { "type": "string" },
                          "body": { "type": "string" },
                          "state": { "type": "string" },
                          "html_url": { "type": "string" },
                          "created_at": { "type": "string" },
                          "updated_at": { "type": "string" },
                          "projectIssueNumber": { "type": "integer", "nullable": true, "description": "Project issue number this application is for" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication required",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  }
