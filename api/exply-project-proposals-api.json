{
  "openapi": "3.1.0",
  "info": {
    "title": "Exply.dev Platform API",
    "description": "Unified HTTP API for managing exply.dev platform resources: project proposals and expert profiles. Supports optional GitHub token authentication or username-based ownership verification.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://exply-github-proxy-kwftltj4yq-uc.a.run.app",
      "description": "Exply.dev Platform API on Google Cloud Run"
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "description": "GitHub OAuth 2.0 authentication. Tokens are automatically saved per-user-per-GPT and reused across all chats. Users only need to authorize once.",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://exply-github-proxy-kwftltj4yq-uc.a.run.app/oauth/authorize",
            "tokenUrl": "https://exply-github-proxy-kwftltj4yq-uc.a.run.app/oauth/access_token",
            "refreshUrl": "https://exply-github-proxy-kwftltj4yq-uc.a.run.app/oauth/access_token",
            "scopes": {
              "public_repo": "Access to public repositories (required for creating/updating issues)",
              "read:user": "Read user profile information (for ownership verification)"
            }
          }
        }
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "Success": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Health check",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "service": { "type": "string" },
                    "version": { "type": "string" },
                    "status": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create_project_issue": {
      "post": {
        "summary": "Create a new project proposal issue",
        "operationId": "create_project_issue",
        "description": "Create a new project proposal issue. Automatically creates a GitHub Project and adds the issue to it. Expert applications will be automatically added to the GitHub Project. Stores creator metadata for ownership verification.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] },
          {}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "body"],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "The title of the project proposal (e.g., 'Project Proposal: [Concept]')",
                    "example": "Project Proposal: Real Estate Auction App"
                  },
                  "body": {
                    "type": "string",
                    "description": "The detailed content of the project proposal in Markdown format",
                    "example": "### New Project Proposal\n\n#### Concept\nA real estate auction app...\n\n#### Core MVP Features\n- Feature 1\n- Feature 2"
                  },
                  "labels": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Optional labels to add to the issue",
                    "default": ["project-proposal"],
                    "example": ["project-proposal"]
                  },
                  "githubUsername": {
                    "type": "string",
                    "description": "GitHub username for storing creator metadata. Optional but recommended for future ownership verification.",
                    "example": "vlad-exply"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Issue created successfully. A GitHub Project is automatically created for this project issue, and the issue is added to it. Expert applications will be automatically added to this GitHub Project.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "issue": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 123456789 },
                        "number": { "type": "integer", "example": 1 },
                        "title": { "type": "string", "example": "Project Proposal: Real Estate Auction App" },
                        "html_url": { "type": "string", "format": "uri", "example": "https://github.com/exply-dev/exply-dev-public-projects/issues/1" },
                        "state": { "type": "string", "example": "open" },
                        "creator": { "type": "string", "example": "vlad-exply" }
                      }
                    },
                    "project": {
                      "type": "object",
                      "description": "GitHub Project information (null if project creation failed)",
                      "nullable": true,
                      "properties": {
                        "id": { "type": "string", "description": "GraphQL node ID of the project", "example": "PVT_kwDOQNbrIs7..." },
                        "number": { "type": "integer", "description": "Project number", "example": 1 },
                        "title": { "type": "string", "description": "Project title", "example": "Project #1: Real Estate Auction App" },
                        "url": { "type": "string", "format": "uri", "description": "URL to the GitHub Project", "example": "https://github.com/orgs/exply-dev/projects/1" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required fields"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/update_project_issue": {
      "post": {
        "summary": "Update an existing project proposal issue",
        "operationId": "update_project_issue",
        "description": "Update an existing project proposal issue (title, body, or state). **Requires authentication.** Only the creator of the issue can update it. Authentication via GitHub token (Authorization header) or githubUsername in body.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] },
          {}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["issueNumber"],
                "properties": {
                  "issueNumber": {
                    "type": "integer",
                    "description": "The issue number to update",
                    "example": 1
                  },
                  "githubUsername": {
                    "type": "string",
                    "description": "GitHub username for ownership verification (alternative to token)",
                    "example": "vlad-exply"
                  },
                  "title": {
                    "type": "string",
                    "description": "Updated title (optional)",
                    "example": "Updated Project Proposal Title"
                  },
                  "body": {
                    "type": "string",
                    "description": "Updated body content in Markdown format (optional)",
                    "example": "### Updated Content\n\nNew description..."
                  },
                  "state": {
                    "type": "string",
                    "enum": ["open", "closed"],
                    "description": "Set issue state (optional)",
                    "example": "open"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Issue updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "issue": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get_project_issue": {
      "post": {
        "summary": "Get details of a project proposal issue",
        "operationId": "get_project_issue",
        "description": "Retrieve details of a specific project proposal issue",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["issueNumber"],
                "properties": {
                  "issueNumber": {
                    "type": "integer",
                    "description": "The issue number to retrieve",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Issue details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "issue": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list_project_issues": {
      "post": {
        "summary": "List all project proposal issues",
        "operationId": "list_project_issues",
        "description": "List all project proposal issues (with filters for state, label, and limit)",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": ["open", "closed", "all"],
                    "description": "Filter issues by state",
                    "default": "open",
                    "example": "open"
                  },
                  "label": {
                    "type": "string",
                    "description": "Filter issues by label",
                    "example": "project-proposal"
                  },
                  "limit": {
                    "type": "integer",
                    "description": "Maximum number of issues to return",
                    "default": 30,
                    "example": 30
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of issues retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "count": { "type": "integer" },
                    "issues": {
                      "type": "array",
                      "items": { "type": "object" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create_expert_application": {
      "post": {
        "summary": "Create an expert application issue for a project",
        "operationId": "create_expert_application",
        "description": "Create an expert application issue for a project. Preferred over comments for better tracking and workflow management. Automatically linked to the project issue and added to the GitHub Project.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] },
          {}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["projectIssueNumber", "body"],
                "properties": {
                  "projectIssueNumber": {
                    "type": "integer",
                    "description": "Project issue number the expert is applying to",
                    "example": 13
                  },
                  "body": {
                    "type": "string",
                    "description": "Application body (markdown) with expert profile information",
                    "example": "ðŸ‘‹ **Expert Candidate Application**\n\nI'm interested in joining this project as a Backend Specialist (Level: Senior)..."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Expert application issue created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "issue": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "number": { "type": "integer" },
                        "title": { "type": "string" },
                        "html_url": { "type": "string" },
                        "state": { "type": "string" },
                        "creator": { "type": "string" }
                      }
                    },
                    "note": { "type": "string", "description": "Optional note about fallback to bot token" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/add_issue_comment": {
      "post": {
        "summary": "Add a comment to an issue",
        "operationId": "add_issue_comment",
        "description": "Add a comment to an issue. For expert applications: only the expert or project creator can comment. For project issues: anyone can comment (public repository). Used for questions and responses.",
        "security": [
          { "oauth2": ["public_repo", "read:user"] },
          {}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["issueNumber", "body"],
                "properties": {
                  "issueNumber": {
                    "type": "integer",
                    "description": "Issue number to comment on",
                    "example": 15
                  },
                  "body": {
                    "type": "string",
                    "description": "Comment body (markdown)",
                    "example": "Could you clarify your experience with React?"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comment created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "comment": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "html_url": { "type": "string" },
                        "body": { "type": "string" },
                        "created_at": { "type": "string" },
                        "user": { "type": "string" }
                      }
                    },
                    "note": { "type": "string", "description": "Optional note about fallback to bot token" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "403": {
            "description": "Forbidden - insufficient permissions to comment on this issue",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
